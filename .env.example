# ===========================================
# AI-Powered Recommendation System Configuration
# ===========================================
# Copy this file to .env and update values for your environment

# Application Settings
APP_NAME=recommendation-system
APP_ENV=development  # development, staging, production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-min-32-chars-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
# SQLite (development):
DATABASE_URL=sqlite:///./recommendation_system.db
# PostgreSQL (production recommended):
# DATABASE_URL=postgresql://user:password@localhost:5432/recommendations
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/recommendations
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis Configuration (for caching and rate limiting)
# Leave empty to use in-memory cache (not recommended for production)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
CACHE_ENABLED=true

# File Paths
MODEL_PATH=./models
DATA_PATH=./data
LOG_PATH=./logs

# API Security
# IMPORTANT: Set a strong API key (min 32 chars) for production!
API_KEY_ENABLED=true
API_KEY=your-secure-api-key-minimum-32-characters-long
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100  # requests per window
RATE_LIMIT_WINDOW=60     # window in seconds
RATE_LIMIT_BURST=20      # burst limit

# Model Training Settings
TRAINING_BATCH_SIZE=1000
TRAINING_ASYNC_ENABLED=true
MODEL_AUTO_SAVE=true
MODEL_VERSION_LIMIT=5

# Recommendation Settings
DEFAULT_NUM_RECOMMENDATIONS=10
MAX_RECOMMENDATIONS=100
COLD_START_THRESHOLD=5
CONTENT_WEIGHT=0.4
COLLABORATIVE_WEIGHT=0.6

# Feature Flags
ENABLE_RECOMMENDATION_LOGGING=true
ENABLE_AB_TESTING=false
ENABLE_METRICS=true
